# create docker image
# run: docker build -t jenkins:v1.0 -f jenkins.df ./
# 2023-06-16

FROM ubuntu:20.04

COPY sources.list /etc/apt

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update
RUN apt-get -y install apt-utils
RUN apt-get -y install sudo vim git zsh tmux python3

RUN useradd -m -s /bin/bash hx && echo "hx:hx1234" | chpasswd
RUN usermod -aG sudo hx
