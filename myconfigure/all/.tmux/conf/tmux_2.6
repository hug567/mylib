##############################################################################
# 竖直分割窗口 (Prefix + \)
unbind %
bind \ splitw -h  -c '#{pane_current_path}'
# 水平分割窗口 (Prefix + -)
unbind '"'
bind - splitw -v -c '#{pane_current_path}'
# 设置面板样式
set -g pane-border-fg '#595959'
set -g pane-border-bg '#272822'
set -g pane-active-border-fg '#99df2c'
set -g pane-active-border-bg '#272822' #(39, 40, 34)
# 设置状态栏样式
set -g status-fg white
set -g status-bg '#353535'
setw -g window-status-current-fg colour226
setw -g window-status-current-bg '#353535'
setw -g window-status-current-attr bold
