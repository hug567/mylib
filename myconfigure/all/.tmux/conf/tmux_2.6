##############################################################################
# 竖直分割窗口 (Prefix + \)
unbind %
bind \ splitw -h  -c '#{pane_current_path}'
# 水平分割窗口 (Prefix + -)
unbind '"'
bind - splitw -v -c '#{pane_current_path}'
# 设置tmux消息属性
set -g message-attr bright
set -g message-style fg='#101010',bg='#bebe12',bold,bright
#set -g message-fg white
#set -g message-bg yellow
# 设置面板样式
set -g pane-border-fg '#595959'
set -g pane-border-bg '#272825'
set -g pane-active-border-fg '#99df2c'
set -g pane-active-border-bg '#272825' #(39, 40, 37)
# 设置状态栏样式
set -g status-fg white
set -g status-bg '#353535'
setw -g window-status-current-fg colour226
setw -g window-status-current-bg '#353535'
setw -g window-status-current-attr bold
##############################################################################
# 在复制模式下绑定 Home 键
bind-key -T copy-mode Home send-keys -X start-of-line
bind-key -T copy-mode-vi Home send-keys -X start-of-line
# 在复制模式下绑定 End 键
bind-key -T copy-mode End send-keys -X end-of-line
bind-key -T copy-mode-vi End send-keys -X end-of-line
##############################################################################
