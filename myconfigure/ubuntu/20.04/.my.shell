ssh_to_server() {
    local user=$1
    local ip=$2
    local port=$3
    local passwd=$4

    ping $ip -c 1 > /dev/null 2>&1
    if [ $? -ne 0 ]; then
        echo "ping $ip failed"
        return
    fi
    sshpass -p $passwd ssh -o StrictHostKeyChecking=no -p$port $user@$ip -t "bash"
}

ssh_to_nuc() {
    local ip=$1
    local user=jenkins
    local passwd=jenkins
    local port=1000

    ssh_to_server $user $ip $port $passwd
}

